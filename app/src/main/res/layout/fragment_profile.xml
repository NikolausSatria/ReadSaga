<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="148dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/txtImageUrlProfile"
                style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                android:layout_width="342dp"
                android:layout_height="55dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="35dp"
                android:ems="10"
                android:fontFamily="@font/aleo"
                android:hint="Url Profile"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewProfile" />

            <EditText
                android:id="@+id/txtUsernameProfile"
                style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                android:layout_width="342dp"
                android:layout_height="55dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="35dp"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/aleo"
                android:hint="Username"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtImageUrlProfile" />

            <EditText
                android:id="@+id/txtOldPassword"
                android:layout_width="342dp"
                android:layout_height="55dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="35dp"
                android:ems="10"
                android:fontFamily="@font/aleo"
                android:hint="Old Password"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtLastNameProfile" />

            <EditText
                android:id="@+id/txtNewPassword"
                android:layout_width="342dp"
                android:layout_height="55dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="35dp"
                android:ems="10"
                android:fontFamily="@font/aleo"
                android:hint="New Password"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtOldPassword" />

            <EditText
                android:id="@+id/txtLastNameProfile"
                android:layout_width="190dp"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="35dp"
                android:ems="10"
                android:fontFamily="@font/aleo"
                android:hint="Last Name"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtUsernameProfile" />

            <EditText
                android:id="@+id/txtFirstNameProfile"
                android:layout_width="137dp"
                android:layout_height="55dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:fontFamily="@font/aleo"
                android:hint="First Name"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtUsernameProfile" />

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="#000000"
                android:fontFamily="@font/aleo"
                android:text="Update Profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtNewPassword"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/btnLogOut"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="#E33122"
                android:fontFamily="@font/aleo"
                android:text="Log Out"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtNewPassword"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>